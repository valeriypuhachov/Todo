@using Todo.WebUI.Models
@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="panel">
        <div class="panel-heading">
            <h2>Friends</h2>
        </div>
        <div class="panel-body">
            <div id="load-section" class="row center-block" style="display: none;">
                <div class="object" id="object_one"></div>
                <div class="object" id="object_two"></div>
                <div class="object" id="object_three"></div>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center text-info">
                    <p>You have no friend</p>
                </div>
            }
            else
            {
                foreach (UserViewModel userFriend in Model)
                {
                    <div class="col-md-12">
                        @Html.Partial("_DisplayFriendPartialView", userFriend)
                    </div>
                }
            }
        </div>
    </div>
</div>
