@using Todo.WebUI.Models
@model UserViewModel

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        @using (Html.BeginForm("AddFriend", "Friends", new { Model.FriendId }, FormMethod.Post, new
        {
            @class = "navbar-form",
            id = "login-form"
        }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-5">
                @Html.Label("FullName", $"{Model.Name} {Model.Surname}")
            </div>
            <div class="col-md-2 col-md-offset-1">
                <img src="@Url.Action("GetPhoto", "Profile", new {id = Model.FriendId})" class="img-thumbnail user-profile-small-photo" alt="Profile Image" />
            </div>
            <div class="col-md-1">
                <input type="submit" class="btn btn-default" value="Add to friends" />
            </div>
        }
    </div>
</div>