<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Храните заметки связанные с работой и повседневными делами с помощью данного сервиса." />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("_Preloader")
    <div class="wrapper">
        <div class="content">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("//TODO", "Index", "Home", null, new { @class = "navbar-brand underline-anim" })
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        @Html.Partial("_LoginPartial")
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.Partial("_Menu")
            }
            <div>
                @RenderBody()
            </div>
        </div>
        <footer>
            <small>&copy;TODO 2016</small>
            <p>Developed by and Valeriy Pugachov</p>
            @Html.ActionLink("About", "About", "Home", new { @class = "btn btn-default" })
        </footer>
    </div>
    @*<script src="~/Scripts/Preloader.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @*<script src="~/Scripts/Preloader.js"></script>*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        var preloader = document.getElementById("pl");

        function fadeOutnojquery(el) {
            el.style.opacity = 1;
            var interpreloader = setInterval(function () {
                el.style.opacity = el.style.opacity - 0.05;
                if (el.style.opacity <= 0.05) {
                    clearInterval(interpreloader);
                    preloader.style.display = "none";
                }
            },
                16);
        }

        window.onload = function () { setTimeout(function () { fadeOutnojquery(preloader); }, 500); };

    </script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</body>
</html>